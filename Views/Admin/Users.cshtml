@model PagedList.IPagedList<NSH.Models.UserModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Users Management";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">User Management</h2>

    <!-- Search Form -->
    <form method="get" class="mb-3 d-flex justify-content-center">
        <input type="text" name="search" class="form-control w-25 me-2" placeholder="Search users..." value="@Request.QueryString["search"]" />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>User ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserID</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td class="text-center">
                            @if (user.IsBlocked)
                            {
                                <a href="@Url.Action("UnblockUser", "Admin", new { id = user.UserID })" class="btn btn-success btn-sm">Unblock</a>
                            }
                            else
                            {
                                <a href="@Url.Action("BlockUser", "Admin", new { id = user.UserID })" class="btn btn-warning btn-sm">Block</a>
                            }
                            <a href="@Url.Action("DeleteUser", "Admin", new { id = user.UserID })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination Controls -->
    <div class="d-flex justify-content-center mt-3">
        @Html.PagedListPager(Model, page => Url.Action("Users", new { page, search = Request.QueryString["search"] }),
            new PagedListRenderOptions { UlElementClasses = new[] { "pagination" }, LiElementClasses = new[] { "page-item" } })
    </div>
</div>

<!-- Bootstrap Styling (Include if not already in layout) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
