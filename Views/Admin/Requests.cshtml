@model PagedList.IPagedList<NSH.Models.RequestModel>
@using PagedList.Mvc;

<div class="container mt-4">
    <h2 class="text-center mb-4 text-primary">Assistance Requests</h2>

    <!-- Search Bar -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-6">
            <form method="get" class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Search requests..." value="@Request.QueryString["search"]" />
                <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Search</button>
            </form>
        </div>
    </div>

    <!-- Requests Table -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow-sm">
            <thead class="table-primary">
                <tr class="text-center">
                    <th>Request</th>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Posted By</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model)
                {
                    <tr class="text-center align-middle">
                        <td>@request.RequestID</td>
                        <td>@request.Title</td>
                        <td>@request.Category</td>
                        <td>@request.PostedBy</td>
                        <td>
                            @if (request.IsCompleted != null && request.IsCompleted == true)
                            {
                                <span class="badge bg-success">Completed</span> <!-- Green for Completed -->
                            }
                            else if (request.Status == "In Progress")
                            {
                                <span class="badge bg-warning text-dark">In Progress</span> <!-- Yellow for In Progress -->
                            }
                            else if (request.Status == "Accepted")
                            {
                                <span class="badge bg-info">Accepted</span> <!-- Blue for Accepted -->
                            }
                            else if (request.Status == "Pending")
                            {
                                <span class="badge bg-secondary">Pending</span> <!-- Gray for Pending -->
                            }
                            else if (request.Status == "Open")
                            {
                                <span class="badge bg-primary">Open</span> <!-- Primary Blue for Open -->
                            }
                            else
                            {
                                <span class="badge bg-dark">@request.Status</span> <!-- Default Dark Badge for any other status -->
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Requests", new { id = request.RequestID })" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a href="@Url.Action("Delete", "Requests", new { id = request.RequestID })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this request?');"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="pagination-container text-center mt-3">
        Page @(Model.PageNumber) of @(Model.PageCount)
        @Html.PagedListPager(Model, page => Url.Action("Requests", new { page, search = Request.QueryString["search"] }),
            new PagedListRenderOptions { Display = PagedListDisplayMode.IfNeeded })
    </div>
</div>
