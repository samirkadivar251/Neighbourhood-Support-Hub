@model NSH.Models.EventModel

<tr>
    <td>@Model.EventTitle</td>
    <td>@Model.EventDate.ToShortDateString() @Model.EventTime</td>
    <td>@Model.OrganizerInfo</td>
    <td>@Model.Location</td>
    <td>
        @if (Model.IsApproved)
        {
            <span class="status-approved">Approved</span>
        }
        else
        {
            <span class="status-pending">Pending</span>
        }
    </td>
    <td>
        @if (!Model.IsApproved)
        {
            <a href="#" class="btn-approve" data-id="@Model.Id">Approve</a>
        }
        <a href="#" class="btn-reject" data-id="@Model.Id">Reject</a>
        <a href="#" class="btn-delete" data-id="@Model.Id">Delete</a>
    </td>
</tr>
