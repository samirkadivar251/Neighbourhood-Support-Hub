@model List<NSH.Models.EventModel>

@{
    ViewBag.Title = "Manage Events";
}

<h2>Manage Events</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Time</th>
            <th>Description</th>
            <th>Organizer</th>
            <th>Location</th>
            <th>Approval Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.EventTitle</td>
                <td>@eventItem.EventDate.ToShortDateString()</td>
                <td>@eventItem.EventTime</td>
                <td>@eventItem.EventDescription</td>
                <td>@eventItem.OrganizerInfo</td>
                <td>@eventItem.Location</td>
                <td>@(eventItem.IsApproved ? "Approved" : "Pending")</td>
                <td>
                    @if (!eventItem.IsApproved)
                    {
                        <button class="btn btn-success approve-btn" data-id="@eventItem.Id">Approve</button>
                    }
                    <button class="btn btn-warning reject-btn" data-id="@eventItem.Id">Reject</button>
                    <button class="btn btn-danger delete-btn" data-id="@eventItem.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $(".approve-btn").click(function () {
            var eventId = $(this).data("id");
            $.post("/Admin/ApproveEvent", { id: eventId }, function (response) {
                if (response.success) {
                    alert("Event approved successfully!");
                    location.reload();
                } else {
                    alert(response.message);
                }
            });
        });

        $(".reject-btn").click(function () {
            var eventId = $(this).data("id");
            $.post("/Admin/RejectEvent", { id: eventId }, function (response) {
                if (response.success) {
                    alert("Event rejected!");
                    location.reload();
                } else {
                    alert(response.message);
                }
            });
        });

        $(".delete-btn").click(function () {
            var eventId = $(this).data("id");
            if (confirm("Are you sure you want to delete this event?")) {
                $.post("/Admin/DeleteEvent", { id: eventId }, function (response) {
                    if (response.success) {
                        alert("Event deleted!");
                        location.reload();
                    } else {
                        alert(response.message);
                    }
                });
            }
        });
    });
</script>
