@model NSH.Models.User

@{
    ViewBag.Title = "Register";
}

<div class="register-page">
    <div class="register-container">
        <h2 class="register-header">Create an Account</h2>

        @using (Html.BeginForm("Register", "Users", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="register-form">
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "register-label" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "register-input", placeholder = "Enter your name" })
                    <span class="error-message">@Html.ValidationMessageFor(m => m.Name)</span>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "register-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "register-input", placeholder = "Enter your email" })
                    <span class="error-message">@Html.ValidationMessageFor(m => m.Email)</span>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Phone, new { @class = "register-label" })
                    @Html.TextBoxFor(m => m.Phone, new { @class = "register-input", placeholder = "Enter your phone number" })
                    <span class="error-message">@Html.ValidationMessageFor(m => m.Phone)</span>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "register-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "register-input", placeholder = "Enter your password" })
                    <span class="error-message">@Html.ValidationMessageFor(m => m.Password)</span>
                </div>

                <button type="submit" class="register-button">Register</button>

                <p class="login-option">Already have an account? <a href="@Url.Action("Login", "Users")">Login here</a></p>
            </div>
        }

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <p class="error-message">@ViewBag.Message</p>
        }
    </div>
</div>