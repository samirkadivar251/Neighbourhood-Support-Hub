@model NSH.Models.RequestModel

@{
    ViewBag.Title = "Edit Request";
}

<h2>Edit Request</h2>

@using (Html.BeginForm("Edit", "Requests", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.RequestID)

    <div>
        <label>Title</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "required" })
    </div>

    <div>
        <label>Category</label>
        @Html.TextBoxFor(m => m.Category, new { @class = "form-control", required = "required" })
    </div>

    <div>
        <label>Description</label>
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", required = "required" })
    </div>

    <div>
        <label>Contact</label>
        @Html.TextBoxFor(m => m.Contact, new { @class = "form-control", required = "required" })
    </div>

    <button type="submit" class="btn btn-primary">Update Request</button>
}