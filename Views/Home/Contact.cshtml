@{
    ViewBag.Title = "Contact Us";
}

<!-- Bootstrap CSS & Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
<link rel="stylesheet" href="@Url.Content("~/Content/ContactUs.css")">

<div class="container contact-container py-5">
    <!-- Header -->
    <div class="text-center contact-header mb-4">
        <h1 class="fw-bold">Contact Us</h1>
        <p class="lead">We're here to help! Get in touch with us.</p>
    </div>

    <div class="row">
        <!-- Contact Info -->
        <div class="col-md-5 d-flex flex-column justify-content-center">
            <h3 class="fw-semibold">Our Location</h3>
            <p><i class="bi bi-geo-alt-fill text-primary"></i> 123 Community St, City, Country</p>
            <p><i class="bi bi-envelope-fill text-danger"></i> support@neighborhoodhub.com</p>
            <p><i class="bi bi-telephone-fill text-success"></i> +1 234 567 890</p>

            <!-- Social Media Links -->
            <h4 class="mt-3">Follow Us</h4>
            <div class="d-flex gap-3">
                <a href="#" class="text-primary fs-4"><i class="bi bi-facebook"></i></a>
                <a href="#" class="text-info fs-4"><i class="bi bi-twitter"></i></a>
                <a href="#" class="text-primary fs-4"><i class="bi bi-linkedin"></i></a>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="col-md-7">
            <div class="card p-4 shadow-sm">
                <h3 class="fw-semibold">Send Us a Message</h3>
                <form>
                    <div class="mb-3">
                        <label class="form-label">Your Name</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Your Email</label>
                        <input type="email" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Subject</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Message</label>
                        <textarea class="form-control" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Send Message</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Google Map -->
    <div class="map-container mt-5">
        <h3 class="text-center">Find Us Here</h3>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3461.782075511997!2d70.79626374372869!3d22.369264485960752!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3959c972761ce515%3A0x3651e3fe1e9df4f8!2sMarwadi%20University!5e1!3m2!1sen!2sin!4v1744181355350!5m2!1sen!2sin" width="1200" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" width="100%" height="300" frameborder="0" style="border:0;" allowfullscreen></iframe>
    </div>
</div>
