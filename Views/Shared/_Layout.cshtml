    <link href="~/Content/Register.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/Content/StyleSheet3.css">
</head>
<body>

    <!-- Toggle Button for Mobile -->
    @{
        bool isLoggedIn = Session["UserID"] != null;
        bool isAdmin = Session["IsAdmin"] != null && (bool)Session["IsAdmin"];
    }

    @if (!isLoggedIn)
    {
        @Html.Partial("_NavbarDefault") <!-- Guest navbar -->
    }
    else if (isAdmin)
    {
        @Html.Partial("_NavbarAdmin") <!-- Admin navbar -->
    }
    else
    {
        @Html.Partial("_NavbarUser") <!-- User navbar -->
    }



    <!-- Main Content -->
    <div class="content" style="margin-left: 250px; padding: 20px;">
        @RenderBody()
    </div>

    <!-- Sidebar Toggle Script -->
    <script>
        function toggleNavbar() {
            const navbar = document.getElementById('leftNavbar');
            navbar.classList.toggle('active');
        }
    </script>
    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <script src="~/signalr/hubs"></script>

    <script>
        $(function () {
            var hub = $.connection.notificationHub;

            hub.client.receiveNotification = function (message, eventId, eventName, requestId, requestName) {
                var url = "#";
                if (eventId) {
                    url = "/Event/Details/" + eventId;
                } else if (requestId) {
                    url = "/Request/Details/" + requestId;
                }

                $('#notificationList').prepend('<li class="unread"><a href="' + url + '">' + message + '</a></li>');
                alert("New Notification: " + message);
            };

            $.connection.hub.start();
        });
    </script>
